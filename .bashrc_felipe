# To use, put this line at the end of ~/.bashrc:
# source ~/<relative path>/.bashrc_felipe

# Syntactic sugar for ANSI escape sequences
txtblk='\e[0;30m' # Black - Regular
txtred='\e[0;31m' # Red
txtgrn='\e[0;32m' # Green
txtylw='\e[0;33m' # Yellow
txtblu='\e[0;34m' # Blue
txtpur='\e[0;35m' # Purple
txtcyn='\e[0;36m' # Cyan
txtwht='\e[0;37m' # White
bldblk='\e[1;30m' # Black - Bold
bldred='\e[1;31m' # Red
bldgrn='\e[1;32m' # Green
bldylw='\e[1;33m' # Yellow
bldblu='\e[1;34m' # Blue
bldpur='\e[1;35m' # Purple
bldcyn='\e[1;36m' # Cyan
bldwht='\e[1;37m' # White
unkblk='\e[4;30m' # Black - Underline
undred='\e[4;31m' # Red
undgrn='\e[4;32m' # Green
undylw='\e[4;33m' # Yellow
undblu='\e[4;34m' # Blue
undpur='\e[4;35m' # Purple
undcyn='\e[4;36m' # Cyan
undwht='\e[4;37m' # White
bakblk='\e[40m'   # Black - Background
bakred='\e[41m'   # Red
badgrn='\e[42m'   # Green
bakylw='\e[43m'   # Yellow
bakblu='\e[44m'   # Blue
bakpur='\e[45m'   # Purple
bakcyn='\e[46m'   # Cyan
bakwht='\e[47m'   # White
txtrst='\e[0m'    # Text Reset

parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
export PS1="$bldblu\w$bldred\$(parse_git_branch)$txtrst$ "

export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"


# ALIASES
alias g="git"
alias gs="git status"
alias gl="git log --pretty=format:'%C(yellow)%h %C(cyan)%ad %Cgreen%an %Creset%s%C(brightred)%d' --date=short --graph"
alias gpl="git pull"
alias gps="git push"
alias gm="git merge"
alias gco="git checkout"
alias gcp="git cherry-pick"
alias gw="git switch"
alias gr="git reset"
alias grs="git restore"
alias grv="git revert"
alias gc="git commit"
alias ga="git add"
alias grf="git reflog"
alias grb="git rebase"
alias grh="git reset HEAD~"
alias grha="git reset --hard"
alias gb="git branch"
alias grb="git rebase"

alias r="rails"
alias rs="rails s"
alias ns="npm run web_server"
alias rc="rails c"
alias rcd="rails c --sandbox"

alias bt="bin/bridgetown"
alias bashrc="sudo nano ~/.bashrc"
